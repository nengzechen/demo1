{
	"info": {
		"_postman_id": "play-demo-api-collection",
		"name": "Play Framework Demo API",
		"description": "Play Framework Demo 项目的 API 测试集合，包含用户、产品、订单等接口的完整测试用例。",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:9000",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "基础接口",
			"description": "首页、健康检查、应用信息等基础接口",
			"item": [
				{
					"name": "首页",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/",
							"host": ["{{baseUrl}}"],
							"path": [""]
						},
						"description": "获取 API 首页信息，包含所有可用端点列表"
					},
					"response": []
				},
				{
					"name": "健康检查",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "检查应用健康状态"
					},
					"response": []
				},
				{
					"name": "应用信息",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/info",
							"host": ["{{baseUrl}}"],
							"path": ["info"]
						},
						"description": "获取应用运行时信息"
					},
					"response": []
				}
			]
		},
		{
			"name": "用户接口 (User API)",
			"description": "用户相关的 CRUD 接口",
			"item": [
				{
					"name": "获取用户列表",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users?page=1&size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"],
							"query": [
								{
									"key": "page",
									"value": "1",
									"description": "页码（默认1）"
								},
								{
									"key": "size",
									"value": "10",
									"description": "每页数量（默认10）"
								}
							]
						},
						"description": "获取用户列表，支持分页"
					},
					"response": []
				},
				{
					"name": "根据ID获取用户",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "1"]
						},
						"description": "根据用户ID获取用户详情"
					},
					"response": []
				},
				{
					"name": "搜索用户",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users/search?name=张",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "search"],
							"query": [
								{
									"key": "name",
									"value": "张",
									"description": "搜索关键词"
								}
							]
						},
						"description": "根据用户名搜索用户"
					},
					"response": []
				},
				{
					"name": "创建用户",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"测试用户\",\n    \"email\": \"test@example.com\",\n    \"phone\": \"13800138000\",\n    \"age\": 28,\n    \"gender\": \"男\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						},
						"description": "创建新用户"
					},
					"response": []
				},
				{
					"name": "更新用户",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"更新后的用户名\",\n    \"email\": \"updated@example.com\",\n    \"age\": 30\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "1"]
						},
						"description": "更新用户信息"
					},
					"response": []
				},
				{
					"name": "删除用户",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/users/5",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "5"]
						},
						"description": "删除用户"
					},
					"response": []
				}
			]
		},
		{
			"name": "产品接口 (Product API)",
			"description": "产品相关的 CRUD 接口",
			"item": [
				{
					"name": "获取产品列表",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						},
						"description": "获取所有产品列表"
					},
					"response": []
				},
				{
					"name": "根据ID获取产品",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/products/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "1"]
						},
						"description": "根据产品ID获取产品详情"
					},
					"response": []
				},
				{
					"name": "根据类别获取产品",
					"request": {
