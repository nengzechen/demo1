						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "[\n    {\n        \"name\": \"批量产品1\",\n        \"description\": \"批量创建的第一个产品\",\n        \"price\": 199.99,\n        \"category\": \"批量测试\",\n        \"stock\": 100\n    },\n    {\n        \"name\": \"批量产品2\",\n        \"description\": \"批量创建的第二个产品\",\n        \"price\": 299.99,\n        \"category\": \"批量测试\",\n        \"stock\": 80\n    },\n    {\n        \"name\": \"批量产品3\",\n        \"description\": \"批量创建的第三个产品\",\n        \"price\": 399.99,\n        \"category\": \"批量测试\",\n        \"stock\": 60\n    }\n]"
						},
