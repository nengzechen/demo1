						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"测试产品\",\n    \"description\": \"这是一个测试产品\",\n    \"price\": 999.99,\n    \"category\": \"测试\",\n    \"stock\": 50\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						},
						"description": "创建新产品"
					},
					"response": []
				},
				{
					"name": "批量创建产品",
