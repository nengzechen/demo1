				{
					"name": "更新产品",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"更新后的产品名\",\n    \"price\": 1299.99,\n    \"stock\": 200\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/products/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "1"]
						},
						"description": "更新产品信息"
					},
					"response": []
				},
				{
					"name": "删除产品",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/products/7",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "7"]
						},
						"description": "删除产品"
					},
					"response": []
				}
			]
		},
		{
			"name": "订单接口 (Order API)",
			"description": "订单相关的接口，包含复杂对象和状态管理",
			"item": [
				{
					"name": "获取订单列表",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/orders",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders"]
						},
						"description": "获取所有订单列表"
					},
					"response": []
				},
				{
					"name": "按状态筛选订单",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/orders?status=PENDING",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders"],
							"query": [
								{
									"key": "status",
									"value": "PENDING",
									"description": "订单状态: PENDING, PAID, SHIPPED, COMPLETED, CANCELLED"
								}
							]
						},
						"description": "根据状态筛选订单"
					},
					"response": []
				},
				{
					"name": "根据ID获取订单",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/orders/1",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "1"]
						},
						"description": "根据订单ID获取订单详情"
					},
					"response": []
				},
				{
					"name": "创建订单",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": 1,\n    \"shippingAddress\": \"北京市朝阳区测试街道123号\",\n    \"remark\": \"请尽快发货\",\n    \"items\": [\n        {\n            \"productId\": 1,\n            \"productName\": \"iPhone 15 Pro\",\n            \"price\": 8999.00,\n            \"quantity\": 1\n        },\n        {\n            \"productId\": 3,\n            \"productName\": \"AirPods Pro 2\",\n            \"price\": 1899.00,\n            \"quantity\": 2\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/orders",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders"]
						},
						"description": "创建新订单（包含订单项）"
					},
					"response": []
				},
				{
					"name": "更新订单状态 (PATCH)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": \"PAID\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/orders/4/status",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "4", "status"]
						},
						"description": "更新订单状态（支持: PENDING -> PAID -> SHIPPED -> COMPLETED，任意状态可转为 CANCELLED）"
					},
					"response": []
				}
			]
		},
